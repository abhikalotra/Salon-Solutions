<div class="page-container">
	
   {% include '::sidebar_admin.html.twig' %}
   
   
   <div class="page-content-wrapper">
      <div class="page-content">
         <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
         <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
               <div class="modal-content">
                  <div class="modal-header">
                     <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                     <h4 class="modal-title">Modal title</h4>
                  </div>
                  <div class="modal-body">
                     Widget settings form goes here
                  </div>
                  <div class="modal-footer">
                     <button type="button" class="btn blue">Save changes</button>
                     <button type="button" class="btn default" data-dismiss="modal">Close</button>
                  </div>
               </div>
               <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
         </div>
         <!-- /.modal -->
         <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
         <!-- BEGIN PAGE HEADER-->
         <div class="page-bar">
            <ul class="page-breadcrumb">
               <li>
                  <i class="fa fa-home"></i>
                  <a href="{{ path('salon_solution_admin_dashboard') }}">Home</a>
                  <i class="fa fa-angle-right"></i>
               </li>
               <li>
                  <a href="{{ path('salon_solution_admin_manageCustomers') }}">Manage Customers</a>
                  <i class="fa fa-angle-right"></i>
               </li>
            
            </ul>
         </div>
         <!-- END PAGE HEADER-->
         <!-- BEGIN PAGE CONTENT-->
         <div class="row">
            <div class="col-md-12">
               <!-- BEGIN EXAMPLE TABLE PORTLET-->
               <div class="portlet box blue">
                  <div class="portlet-title">
                     <div class="caption">
                        <i class="fa fa-edit"></i>Manage Customers
                     </div>
                     <div class="tools">
                         
                        <a href="javascript:;" class="reload">
                        </a>                      
                     </div>
                  </div>
                   
                  <div class="portlet-body">
                     <div class="table-toolbar">
                        <div class="row">
                           <div class="col-md-6">
                              <div class="btn-group">
                                <a href="{{ path('salon_solution_admin_addCustomers') }}"  class="btn green"> Add Customer  <i class="fa fa-plus"></i> </a>
                              </div>
                           </div>
                       	<div class="col-md-6">
									<!-- 	<div class="btn-group pull-right">
											<button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
											</button>
											<ul class="dropdown-menu pull-right">
												<li>
													<a href="javascript:;">
													Print </a>
												</li>
												<li>
													<a href="javascript:;">
													Save as PDF </a>
												</li>
												<li>
													<a href="javascript:;">
													Export to Excel </a>
												</li>
											</ul>
										</div>
								 -->	</div>
							 
							 
                        </div>
                     </div>
                     <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                        <thead>
                           <tr>
                              <th>Id</th>
                              <th>Name</th>        
                               <th>Username</th>
                              <th>Email</th>
                              <th>Status</th>
                              <th>Action</th>                             
                           </tr>
                        </thead>
                        <tbody>
							
						{% for customer in customers  %}
							<tr>
								
                              <td>  {{ customer.id }}  </td>
                              <td> 	{{ customer.firstName }}  	{{ customer.lastName }}  </td>
                              <td>   {{ customer.username }}    </td>
                              <td class="center">  {{ customer.email }}  </td>
                              
                              {% if customer.status == 1   %}
								<td class="center" id="divStatus-{{customer.id}}">
									<a id="status-{{customer.id}}" class="activate" title="Click to Change" onclick="javascript:changeStatus('status-{{customer.id}}',{{customer.status}});">   
										Active
									</a> 
							   </td>
							  {% else %}
								<td class="center" id="divStatus-{{customer.id}}">  
									<a id="status-{{customer.id}}" class="edit" title="Click to Change" onclick="javascript:changeStatus('status-{{customer.id}}',{{customer.status}});">  
										Inactive 
									</a>  
								</td>
								{% endif %}
							  
                             
                              
                              <td> 
                              <a class="edit" href="{{ asset('admin/viewCustomer') }}/{{ customer.id }}" title="View">  <i class="glyphicon glyphicon-eye-open"></i>  </a> 
                               <a class="edit" href="{{ asset('admin/editManageCustomers') }}/{{ customer.id }}" title="Edit"> <i class="glyphicon glyphicon-pencil"></i> </a> 
                              <a  title="Delete"  onclick="showDeleteBox('{{ asset('admin/deleteManageCustomers') }}/{{ customer.id }}')"  class="delete" >   <i class="glyphicon glyphicon-trash"></i> </a> </td>
                           </tr>
							
								{% endfor %}
						
                        </tbody>
                     </table>
                  </div>
               </div>
               <!-- END EXAMPLE TABLE PORTLET-->
            </div>
         </div>
         <!-- END PAGE CONTENT -->
      </div>
   </div>
   <!-- END CONTENT -->
 
</div>
<!-- END CONTAINER -->
