				{% for consumer in updateConsumerInfo  %}						
							
		<form  action="" method="post"  class="form-horizontal" enctype="multipart/form-data">
							
																		
							<div class="form-group last">
										<label class="col-md-3 control-label">First Name:</label>
										<div class="col-md-4">
											<span class="form-control-static">
											   <input type="text" name="firstName"  value="{{ consumer.firstName }}" class="form-control input-circle" >
										</div>
							</div>
							
							
							<div class="form-group last">
										<label class="col-md-3 control-label"> Last Name:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="text"   name="lastName"  value="{{ consumer.lastName }}" class="form-control input-circle">

										</div>
							</div>
							
							<div class="form-group last">
										<label class="col-md-3 control-label">E-mail:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="email" name="email"  value="{{ consumer.email }}"  class="form-control input-circle"/>
										</div>
							</div>
							<div class="form-group last">
										<label class="col-md-3 control-label">Username:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="text" name="username"   value="{{ consumer.username }}" class="form-control input-circle"/>
										</div>
							</div>
							
							<div class="form-group last">
										<label class="col-md-3 control-label">Country:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <select id="country" name="country"  value="{{ consumer.country }}"></select>
										</div>
							</div>
							<div class="form-group last">
										<label class="col-md-3 control-label">Province:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										  <select name="state" id="state"  value="{{ consumer.state }}"></select>
										</div>
							</div>
							<div class="form-group last">
										<label class="col-md-3 control-label">Address:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="text"  name="address"   value="{{ consumer.address }}" class="form-control input-circle"/>
										</div>
							</div>
							<div class="form-group last">
										<label class="col-md-3 control-label">City:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="text"  name="city"  value="{{ consumer.city }}"  class="form-control input-circle"/>
										</div>
							</div>
							<div class="form-group last">
										<label class="col-md-3 control-label">Zip:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										 <input type="text"  name="zip"   value="{{ consumer.zip }}" class="form-control input-circle"/>
										</div>
							</div>
							
							<div class="form-group last">
										<label class="col-md-3 control-label">Salon Name:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										<select name = "parentId" >		
																						
												{% for salonNames in salonName  %}	
													<option value="{{ salonNames.ownerId }}" {% if salonNames.ownerId == consumer.parentId %} selected {% endif %}>{{ salonNames.name }} </option>	
												{% endfor %}	
											</select>
										</div>
								</div>
							
								<div class="form-actions">
									<div class="row">
										<div class="col-md-offset-3 col-md-9">
											<a href="{{ path('salon_solution_admin_manageConsumers') }}" class="btn btn-circle blue">Cancel</a>
											<button type="submit" class="btn btn-circle blue">submit</button>
											
									
										</div>
									</div>
								</div>
							
							</form>
							{% endfor %}		
							
							
		<script language="javascript">
	populateCountries("country", "state");
	</script>							
							
							
							
										<!-- END FORM-->
									</div>
								</div>
							
							</div>
					</div>
					</div>
				</div>
			</div>
