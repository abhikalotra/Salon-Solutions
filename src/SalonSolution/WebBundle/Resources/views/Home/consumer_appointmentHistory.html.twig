<div class="container-fluid easy happyness book-b">
  <div class="container">
    <div class="row">
     
      <div class="col-lg-12 ads">
		  
		  {% include '::nav_consumer.html.twig' %}
		  
       </div>
      
      
      <div class="container">
        <div class="row book_in">
          <div class="col-lg-12 bay">
            <h4>
             {% include '::nav_consumer_offering_message.html.twig' %}
            </h4>

            {% include '::sidebar_left_consumer.html.twig' %}
            
           <div class="col-lg-6 cod_center">
            
		        <div class="loginbox login_form" id="login_form">
				
                       <ul>
                          <h4>  Appointment History  </h4>
                         <li></li>
                         <li></li> 
                       </ul>
					{% if appointmentDetail   %}	
					   {% for appointments in appointmentDetail  %}			
					  <div class="col_inner" style="background: {{ appointments.serviceColor }};">
						  
							   <div class="col-md-3 col-1 col_01 btn-lg" id="appointment">
								  <p>{{ appointments.scheduledDate }}</p>
								</div>
							
								<div class="col-md-3 col-1 col_01" id="appointment">
								  <p>{{ appointments.scheduledTime }}</p>
								</div>
								
								<div class="col-md-3 col-1 col_01" id="appointment">
								  <p>{{ appointments.serviceTitle }}</p>
								</div>
			
								<div class="col-md-3 col-1 col_01" id="appointment">
								 <p>
									{% if appointments.firstName != '' %}
										{{appointments.firstName}}  &nbsp;(Friend)
									{% else %}
										{{ consumerFirstName }}  {{ consumerLastName }}
									{% endif %}
								</p>
								</div>
								<div class="col-md-3 col-1 col_01" id="appointment">
								  <p>{{ salonName }}</p>
								</div>
								<div class="col-md-3 col-1 col_01" id="appointment">
								  <p>{{ salonCity }}</p>
								</div>
								
					</div> 
				
				 {% endfor %}  
				 
					
				 	{% else %}		
					 
						<div class="col-md-3 col-1 col_01 historyRecord" id="appointment">
						  <p> No Record / History</p>
							<img src="{{ asset('theme/frontend/images/noRecord.jpg') }}" class="sadNoRecord" title="No History">
						</div>
								<style>
								div#appointment {
								width: 100% !important;
								}
								.historyRecord p {
								margin: 0px !important;
								padding: 0px 0px 23px 0px;
								}
								</style>
				{% endif %}		 
				 
				</div>
            </div>
       
			{% include '::sidebar_right_consumer.html.twig' %}
