<div class="page-container">
	
   {% include '::sidebar_salon.html.twig' %}
   
   
   <div class="page-content-wrapper">
      <div class="page-content">
         <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
      <!-- BEGIN PAGE HEADER-->
         <div class="page-bar">
            <ul class="page-breadcrumb">
               <li>
                  <i class="fa fa-home"></i>
                  <a href="{{ path('salon_solution_salon_dashboard') }}">Home</a>
                  <i class="fa fa-angle-right"></i>
               </li>
               <li>
                  <a href="{{ path('salon_solution_salon_manageServices') }}">Manage Services</a>
                  <i class="fa fa-angle-right"></i>
               </li>
            
            </ul>
         </div>
         <!-- END PAGE HEADER-->
         <!-- BEGIN PAGE CONTENT-->
         <div class="row">
            <div class="col-md-12">
               <!-- BEGIN EXAMPLE TABLE PORTLET-->
               <div class="portlet box blue">
                  <div class="portlet-title">
                     <div class="caption">
                        <i class="fa fa-edit"></i>Manage Services
                     </div>
                     <div class="tools">
                       
                        <a href="javascript:;" class="reload">
                        </a>                      
                     </div>
                  </div>
                   
                  <div class="portlet-body">
                     <div class="table-toolbar">
                        <div class="row">
                           <div class="col-md-6">
                              <div class="btn-group">
                                 <a href="{{ path('salon_solution_salon_addService') }}"  class="btn green"> Add Services <i class="fa fa-plus"></i> </a>
                              </div>
                           </div>
<!--
                       	<div class="col-md-6">
										<div class="btn-group pull-right">
											<button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
											</button>
											<ul class="dropdown-menu pull-right">
												<li>
													<a href="javascript:;">
													Print </a>
												</li>
												<li>
													<a href="javascript:;">
													Save as PDF </a>
												</li>
												<li>
													<a href="javascript:;">
													Export to Excel </a>
												</li>
											</ul>
										</div>
									</div>
                       
-->
                        </div>
                     </div>
                     <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                        <thead>
                            <tr>
                              <th>Id</th>
                              <th>Title</th>        
                              <th>Display Name</th>        
                                <th>Color</th>
                              <th>Price</th>
                              <th>SalonId</th>
                              <th>Availability</th>
                              <th>Status</th>
                              <th>Action</th>                             
                           </tr>
                        </thead>
                        <tbody>
							
									
						{% for Service in Services  %}
							<tr >
								
                              <td>  {{ Service.id }}  </td>
                              <td > 	{{ Service.title }}  </td>
                              <td > 	{{ Service.displayName }}  </td>
                              
							<td>   <input type="text"   style= "background-color: {{ Service.color }};  width: 80px;" readonly class="form-control input-circle" />   </td>
                              <td class="center">  {{ Service.price }}  </td>                              
                              <td class="center">  {{ Service.salonName }}  </td>
                              <td class="center">  {{ Service.availability }}  </td>
                              

                              {% if Service.status == 1   %}
								<td class="center" id="divStatus-{{Service.id}}">
									<a id="status-{{Service.id}}" class="activate" title="Click to Change" onclick="javascript:changeStatusServices('status-{{Service.id}}',{{Service.status}});">   
										Active
									</a> 
							   </td>
							  {% else %}
								<td class="center" id="divStatus-{{Service.id}}">  
									<a id="status-{{Service.id}}" class="edit" title="Click to Change" onclick="javascript:changeStatusServices('status-{{Service.id}}',{{Service.status}});">  
										Inactive 
									</a>  
								</td>
								{% endif %}

							  
                             
                              
                              <td>
                               <a class="edit" href="{{ asset('salon/viewService') }}/{{ Service.id }}" title="View">  <i class="glyphicon glyphicon-eye-open"></i>    </a> 
                                <a class="edit" href="{{ asset('salon/editService') }}/{{ Service.id }}" title="Edit"> <i class="glyphicon glyphicon-pencil"></i> </a> 
                               
                               
                              <a onclick="showDeleteBox('{{ asset('salon/deleteService') }}/{{ Service.id }}')"    title="Delete"   class="delete">  <i class="glyphicon glyphicon-trash"></i></a> </td>
                           </tr>
							
								{% endfor %}
							
					
						
							
						
                        </tbody>
                     </table>
                  </div>
               </div>
               <!-- END EXAMPLE TABLE PORTLET-->
            </div>
         </div>
         <!-- END PAGE CONTENT -->
      </div>
   </div>
 
</div>
