<script>
	function validateForm()
	{
		for(var i=1; i<=28; i++)
		{
			$("#time_"+i).css('border-color', 'auto');
		}
		for(var counter=1; counter<=28; counter++)
		{
			if( counter != 1 && counter != 5 && counter != 9 && counter != 13 && counter != 17 && counter != 21 && counter != 25 )
			{
				var prevCounter = counter - 1;

				if( $("#time_"+counter).val() < $("#time_"+prevCounter).val() )
				{
					alert("The time entered should be greater than the time entered in previous box.");
					$("#time_"+counter).css('border-color', 'red');
					//$("#time_"+counter).focus();
					$("#time_"+counter).click();
					return false;
				}
				else
				{
					$("#time_"+counter).css('border-color', 'auto');
				}
			}
			else
			{
				$("#time_"+counter).css('border-color', 'auto');
			}
		}

		//$("#hidBusinessImage").val($("#businessImage").attr('src'));

		document.getElementById("businessAddForm").submit();
	}
</script>	


