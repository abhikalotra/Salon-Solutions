<script>
	function update_time(id)
	{
	//alert(id);
		if(document.getElementById(id).checked == true)
		{
			if(id=='all_days')
	  		{
				for(var countElement1=5; countElement1<29; countElement1=countElement1+4)
				{
					var countElement2 = countElement1+1;
					var countElement3 = countElement2+1;
					var countElement4 = countElement3+1;
	
					document.getElementById('time_'+countElement1).value = document.getElementById('time_1').value;
					document.getElementById('time_'+countElement2).value = document.getElementById('time_2').value;
					document.getElementById('time_'+countElement3).value = document.getElementById('time_3').value;
					document.getElementById('time_'+countElement4).value = document.getElementById('time_4').value;	
				}	
	
	
			}
			else if(id=='week_days' )
	 		{
						for(var countElement1=5; countElement1<25; countElement1=countElement1+4)
						{
							var countElement2 = countElement1+1;
							var countElement3 = countElement2+1;
							var countElement4 = countElement3+1;
	
							document.getElementById('time_'+countElement1).value = document.getElementById('time_1').value;
							document.getElementById('time_'+countElement2).value = document.getElementById('time_2').value;
							document.getElementById('time_'+countElement3).value = document.getElementById('time_3').value;
							document.getElementById('time_'+countElement4).value = document.getElementById('time_4').value;	
						}	
	
										
	
					for(var countElement1=25; countElement1<29; countElement1=countElement1+4)
						{
							var countElement2 = countElement1+1;
							var countElement3 = countElement2+1;
							var countElement4 = countElement3+1;
	
							document.getElementById('time_'+countElement1).value = "";
							document.getElementById('time_'+countElement2).value = "";
							document.getElementById('time_'+countElement3).value = "";
							document.getElementById('time_'+countElement4).value = "";	
						}
	
	                       }
		}
		
	}
	       
</script>
