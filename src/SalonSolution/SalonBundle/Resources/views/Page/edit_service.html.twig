						<div class="tab-content">
							<div class="tab-pane active" id="tab_0">
								<div class="portlet box green">
									<div class="portlet-title">
										<div class="caption">
											<i class="fa fa-gift"></i>Edit Service Information
										</div>
										<div class="tools">
										
											<a href="javascript:;" class="reload">
											</a>
											
										</div>
									</div>
									<div class="portlet-body form">
										<!-- BEGIN FORM-->
								
					{% for service in updateServiceInformation  %}
								 
									
							<form  action="" method="post" class="form-horizontal"  enctype="multipart/form-data" >
							
																		
						<div class="form-group last">
										<label class="col-md-3 control-label">Title:</label>
										<div class="col-md-4">
											<span class="form-control-static">
											   <input type="text" name="title" value="{{ service.title }}" class="form-control input-circle" >
										</div>
							</div><div class="form-group last">
										<label class="col-md-3 control-label">Display Name:</label>
										<div class="col-md-4">
											<span class="form-control-static">
											   <input type="text" name="displayName" value="{{ service.displayName }}" class="form-control input-circle" >
										</div>
							</div>
							
							
							<div class="form-group last">
										<label class="col-md-3 control-label">Description:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="text"   name="description" value="{{ service.description }}" class="form-control input-circle">

										</div>
							</div>
							
							<div class="form-group last">
										<label class="col-md-3 control-label">Color:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="color" name="color" value="{{ service.color }}" />
										</div>
							</div>
							<div class="form-group last">
										<label class="col-md-3 control-label">price:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="text" name="price" value="{{ service.price }}"  class="form-control input-circle"/>
										</div>
							</div>

						<div class="form-group last">
										<label class="col-md-3 control-label">Salon Location:</label>
										<div class="col-md-4">
											<span class="form-control-static">
											
										 <select name = "salonId" id="salonId" >	
										 	
									
											{% for salonOwner in Salonowner  %}	
												<option value="{{ salonOwner.id }}"  {% if salonOwner.city ==  service.salonId %}  selected {% endif %} >{{ salonOwner.city }} </option>											  
											{% endfor %}	
										</select>
											
										</div>
							</div>
							
							<div class="form-group last">
										<label class="col-md-3 control-label">Availability:</label>
										<div class="col-md-4">
											<span class="form-control-static">
										   <input type="text" name="availability" value="{{ service.availability }}"  class="form-control input-circle"/>
										</div>
							</div>
							
								<div class="form-actions">
									<div class="row">
										<div class="col-md-offset-3 col-md-9">
										<a href="{{ path('salon_solution_salon_manageServices') }}" class="btn btn-circle blue">Cancel </a>
											<button type="submit" class="btn btn-circle blue">Submit</button>
											
										</div>
									</div>
								</div>
							
							</form>
								{% endfor %}		
										<!-- END FORM-->	
								
								</div>
							
							</div>
					</div>
					</div>
				</div>
			</div>
			<!-- END PAGE CONTENT-->
		</div>
	</div>
	<!-- END CONTENT -->
			
</div>
