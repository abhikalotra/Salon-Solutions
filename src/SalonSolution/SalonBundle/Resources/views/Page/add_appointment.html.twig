		function getServicesAndConsumers(id)
		{
			var salonId = id.value;  
				
			$.ajax({
               		url : '{{ path("salon_solution_salon_getServices") }}',
                	type:'POST',
                	data:{'salonId':salonId},
                	//dataType:'html',   
                	success:function(data)
                	{
						$('#serviceId').html(data);
						$('#serviceId').css('display', 'block');
					}
            });
            
            $.ajax({
               		url : '{{ path("salon_solution_salon_getConsumers") }}',
                	type:'POST',
                	data:{'salonId':salonId},
                	//dataType:'html',   
                	success:function(data)
                	{
						$('#consumerId').html(data);
						$('#consumerId').css('display', 'block');
					}
            });
		}
		
	</script>



