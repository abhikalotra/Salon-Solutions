{% include '::header_salon.html.twig' %}

<link href="{{ asset('theme/backend/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css') }}"  rel="stylesheet" type="text/css" media="all"/>
<link href="{{ asset('theme/backend/assets/admin/pages/css/profile-old.css') }}"  rel="stylesheet" type="text/css" media="all"/>

<!-- BEGIN CONTAINER -->
<div class="page-container">
	{% include '::sidebar_salon.html.twig' %}

	<div class="page-content-wrapper">
		<div class="page-content">
			


			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->
		
		
		<div class="row profile">
				<div class="col-md-12">
					<!--BEGIN TABS-->
					<div class="tabbable-line tabbable-full-width">
						<ul class="nav nav-tabs">
							<li class="active">
								<a href="#tab_1_1" data-toggle="tab" aria-expanded="true">
								Overview </a>
							</li>						
						</ul>
						<div class="tab-content">
							<div class="tab-pane active" id="tab_1_1">
								<div class="row">

							{% for view in viewClosedHour %}

							
									<div class="col-md-3">
										<ul class="list-unstyled profile-nav">
											<li  class="img-responsive" >
																						   
													   	<img src="{{ asset('uploads/default_image/') }}default_avatar.png" class="img-responsive" alt="">
													    
													 
											
												
											</li>
											
										</ul>
									</div>
									
									
										<div class="col-md-9">
										<div class="row">
											<div class="col-md-8 profile-info"> 
												<h1 >{{view.date}} </h1>  
												
												
												<ul class="list-inline">
													<li>
														<i class="fa fa-map-marker"></i> {{view.date}}
													</li>
													<li>
														<i class="fa fa-automobile"></i> {{view.closedFromTime}}
													</li>
													<li>
														<i class="fa fa-briefcase"></i> {{view.closedToTime}}
													</li>
												
													</li>
												</ul>
											</div>
											<!--end col-md-8-->
										
										</div>
										<!--end row-->
										<div class="tabbable-line tabbable-custom-profile">
											<ul class="nav nav-tabs">
												<li class="active">
													<a href="#tab_1_11" data-toggle="tab" aria-expanded="true">
													Closed Hour </a>
												</li>
												
											</ul>
											<div class="tab-content">
												<div class="tab-pane active" id="tab_1_11">
													<div class="portlet-body">
														<table class="table table-striped table-bordered table-advance table-hover">
														<thead>
														<tr>
															<th>
																<i class="fa fa-briefcase"></i> Date
															</th>
															<th>
																<i class="fa fa-paper-plane-o"></i>Closed From (Time)
															</th>
															<th>
																<i class="fa fa-automobile"></i> Closed To (Time)
															</th>
																												
														
														</tr>
														</thead>
														<tbody  >
														<tr>
															<td >																
															 {{view.date}}
															</td>
															<td  >
															{{view.closedFromTime}}
															</td>
															<td >
															{{view.closedToTime}}
															</td>
															
														</tr>
																												
														</tbody>
														</table>
													</div>
												</div>
												<!--tab-pane-->

										{% endfor %}	

											</div>
										</div>
									</div>
								
								
							
								</div>
							</div>
							<!--tab_1_2-->
								<div class="form-actions">
									<div class="row">
										<div class="col-md-offset-3 col-md-9">
												<a href="{{ path('salon_solution_salon_closedDays') }}" class="btn btn-circle blue">Cancel</a>
									
										</div>
									</div>
								</div>
							<!--end tab-pane-->
							</div>
					</div>
					<!--END TABS-->
				</div>
			</div>
		
		
		
		
		
		
		
		
		
		</div>
	</div>
	<!-- END CONTENT -->
			
</div>
