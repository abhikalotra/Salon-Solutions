
{% include '::header_employee.html.twig' %}


<div class="container-fluid easy happyness book-b">
	<div class="container">
		<div class="row">

			<div class="col-lg-12 ads">
			{% include '::nav_employee.html.twig' %}
			</div>

	<div class="container">
		<div class="row book_in">
			<div class="col-lg-12 bay">

			{% include '::sidebar_left_employee_calander.html.twig' %}
	
				<div class="col-lg-6 cod_center" style=" width: 64%;">
					<div class="loginbox login_form" id="login_form">
							<ul>
								<h4>   Client List </h4>
								<li></li>
								<li></li>
							</ul> 

				
						<div class="col-lg-6 cod_centerWidth" style="overflow: auto; max-height: 500px ! important;">
							
						 <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                       {% if consumerDetails  %}	
					   <thead>
                           <tr>
                             <th>First Name</th>
                             <th>Last Name</th>
                             <th>Email</th>
                              <th>Phone No.</th>                          
                              <th>Status</th>                          
                              <th>Action</th>                          
                           </tr>
                        </thead>
                        <tbody>
					
						{% for consumerData in consumerDetails  %}
							<tr>					
							<td> {{ consumerData.firstName }} </td>
							<td> {{ consumerData.lastName	}} </td>
							<td> {{ consumerData.email	}} </td>
							<td> {{ consumerData.mobile	}} </td>
							
							{% if consumerData.status == 1   %}
								<td class="center" id="divStatus-{{consumerData.id}}">
									<a id="status-{{consumerData.id}}" class="activate" title="Click to Change" onclick="javascript:changeStatusClients('status-{{consumerData.id}}',{{consumerData.status}});">  
										Active
									</a> 
							   </td>
							  {% else %}
								<td class="center" id="divStatus-{{consumerData.id}}">  
									<a id="status-{{consumerData.id}}" class="edit" title="Click to Change" onclick="javascript:changeStatusClients('status-{{consumerData.id}}',{{consumerData.status}});">  
										Inactive 
								</a>  
								</td>
								{% endif %}
								
							<td>
							<a class="view" href="{{ asset('employee/viewClient') }}/{{ consumerData.id }} " title="View">  <i class="glyphicon glyphicon-eye-open"></i>    </a> 
							<a class="Edit" href="{{ asset('employee/editClient') }}/{{ consumerData.id }} " title="Edit">  <i class="glyphicon glyphicon-pencil"></i>    </a>
							
							  <a href="{{ asset('employee/deleteClient') }}/{{ consumerData.id }}"    title="Delete"   class="delete">  <i class="glyphicon glyphicon-trash"></i></a> </td>
							  <!-- <a onclick="showDeleteBox('{{ asset('employee/deleteClient') }}/{{ consumerData.id }}')"    title="Delete"   class="delete">  <i class="glyphicon glyphicon-trash"></i></a> </td> -->

                        
							</td>
                           </tr>
								{% endfor %}  
							
								
							</tbody>
							
							{% else %}
											<p>No Client Details Found </p>
								{% endif %}
						</table>

                  
								
								
								
					</div> 
							
			</div>
					



			</div>
		</div>

	</div>

		<!--
		{% include '::sidebar_right_employee.html.twig' %}
		-->
		</div>
	</div>
	</div>
	<!-- /.row --> 

	</div>
</div>
</div>
 


