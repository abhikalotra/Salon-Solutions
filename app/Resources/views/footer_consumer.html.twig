				var curYear = dateObj.getUTCFullYear();
				
				var lastMonth = curMonth;
				var lastDay = curDay + 15;
				var lastYear = curYear;
				
				if( lastDay > 30 )
				{
					lastMonth = curMonth + 1;
					lastDay = lastDay - 30;
					if( lastMonth > 12 )
					{
						lastMonth = 1;
						lastYear = curYear + 1;
					}
						
				}
				
