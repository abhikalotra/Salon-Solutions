			function showCalendar(month, day, year)
			{ 
				var todaysDate = day;
				
				var dateObj = new Date();
				//var month = dateObj.getUTCMonth() + 1; //months from 1-12
				var curMonth = dateObj.getUTCMonth(); //months from 1-12
